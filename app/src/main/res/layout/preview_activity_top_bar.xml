<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <ImageButton
        android:clickable="true"
        android:id="@+id/iv_top_bar_left"
        android:layout_width="48dp"
        android:paddingLeft="5dp"
        android:layout_height="match_parent"
        android:background="@color/touming"
        android:scaleType="center"
        android:src="@drawable/icon_back_white"/>
    
    <View
        android:id="@+id/v_divider"
        android:layout_toRightOf="@id/iv_top_bar_left"
        android:background="@color/bai"
        android:layout_margin="15dp"
        android:layout_width="1px"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tv_top_bar_title"
        android:layout_toRightOf="@id/v_divider"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="图片"
        android:layout_marginLeft="3dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/bt_next"
        android:text="下一步(0/20)"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="13sp"
        android:textColor="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/click_selector_next_btn"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="30dp"/>

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc"/>
</RelativeLayout>
