    <RelativeLayout
        android:id="@+id/rl_drawer_lockswitch"
        android:background="@color/actionbar_bg_color"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="锁屏开关"
            android:textColor="@color/bai"
            android:textSize="15sp"
            android:drawablePadding="9dp"
            android:layout_marginLeft="26dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Switch
            android:id="@+id/sw_addlock"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!--<View-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_marginLeft="17dp"-->
            <!--android:layout_marginRight="40dp"-->
            <!--android:background="@color/bai_20"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1px"/>-->
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_drawer_opennotify"
        android:background="@drawable/click_selector_actionbar_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/left_drawer_itemh">
        <TextView
            android:id="@+id/tv_title"
            android:gravity="center"
            android:text="开启通知权限"
            android:textColor="@color/bai"
            android:textSize="15sp"
            android:drawableLeft="@drawable/shape_leftdrawer_smallicon"
            android:drawablePadding="5dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@id/tv_title"
            android:gravity="center"
            android:text="找到 '多图锁屏' 并打开通知权限"
            android:textColor="@color/bai_60"
            android:textSize="12sp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="90dp"
            android:background="@color/bai_20"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_drawer_closesyslock"
        android:background="@drawable/click_selector_actionbar_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/left_drawer_itemh">
        <TextView
            android:id="@+id/tv_title1"
            android:gravity="center"
            android:text="关闭系统锁屏"
            android:textColor="@color/bai"
            android:textSize="15sp"
            android:drawableLeft="@drawable/shape_leftdrawer_smallicon"
            android:drawablePadding="5dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@id/tv_title1"
            android:gravity="center"
            android:text="选择无，或者打开直接进入系统"
            android:textColor="@color/bai_60"
            android:textSize="12sp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="90dp"
            android:background="@color/bai_20"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_drawer_autostart"
        android:background="@drawable/click_selector_actionbar_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/left_drawer_itemh">
        <TextView
            android:id="@+id/tv_title2"
            android:gravity="center"
            android:text="设置白名单/自启动"
            android:textColor="@color/bai"
            android:textSize="15sp"
            android:drawableLeft="@drawable/shape_leftdrawer_smallicon"
            android:drawablePadding="5dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@id/tv_title2"
            android:gravity="center"
            android:text="找到 '多图锁屏'，加入白名单/自启动"
            android:textColor="@color/bai_60"
            android:textSize="12sp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="90dp"
            android:background="@color/bai_20"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_drawer_flowwindow"
        android:background="@drawable/click_selector_actionbar_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/left_drawer_itemh">
        <TextView
            android:id="@+id/tv_title3"
            android:gravity="center"
            android:text="显示悬浮窗"
            android:textColor="@color/bai"
            android:textSize="15sp"
            android:drawableLeft="@drawable/shape_leftdrawer_smallicon"
            android:drawablePadding="5dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@id/tv_title3"
            android:gravity="center"
            android:text="找到悬浮窗权限并打开"
            android:textColor="@color/bai_60"
            android:textSize="12sp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!--<View-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_marginLeft="17dp"-->
            <!--android:layout_marginRight="40dp"-->
            <!--android:background="@color/bai_20"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1px"/>-->
    </RelativeLayout>

    <View
        android:id="@+id/divider2"
        android:layout_alignParentBottom="true"
        android:background="@color/actionbar_bg_color"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <RelativeLayout
        android:id="@+id/rl_drawer_checkupdata"
        android:background="@drawable/click_selector_actionbar_bg"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="检查更新"
            android:textColor="@color/bai"
            android:textSize="15sp"
            android:drawablePadding="9dp"
            android:layout_marginLeft="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_drawer_about"
        android:background="@drawable/click_selector_actionbar_bg"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="关于"
            android:textColor="@color/bai"
            android:textSize="15sp"
            android:drawablePadding="9dp"
            android:layout_marginLeft="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View
        android:id="@+id/left_drawer_bottomview"
        android:background="@color/actionbar_bg_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
