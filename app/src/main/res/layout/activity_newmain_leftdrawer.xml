<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="230dp"
        android:layout_height="match_parent">
                <!--android:fitsSystemWindows="true"-->

    <TextView
        android:id="@+id/rl_drawer_logo"
        android:text="设置"
        android:textColor="@color/bai"
        android:textSize="16sp"
        android:drawablePadding="10dp"
        android:background="@color/actionbar_bg_color"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <RelativeLayout
        android:id="@+id/rl_drawer_category"
        android:background="@drawable/click_selector_actionbar_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/left_drawer_itemh">
        <TextView
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="所有分类"
            android:textColor="@color/bai"
            android:textSize="15sp"
            android:drawablePadding="9dp"
            android:layout_marginLeft="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_drawer_liked"
        android:background="@drawable/click_selector_actionbar_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/left_drawer_itemh">
        <TextView
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="赞过的图"
            android:textColor="@color/bai"
            android:textSize="15sp"
            android:drawablePadding="9dp"
            android:layout_marginLeft="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/bai_20"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_drawer_addlock"
        android:background="@drawable/click_selector_actionbar_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/left_drawer_itemh">
        <TextView
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="锁屏 +"
            android:textColor="@color/bai"
            android:textSize="15sp"
            android:drawablePadding="9dp"
            android:layout_marginLeft="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Switch
            android:id="@+id/sw_addlock"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_drawer_addlock_gallery"
        android:background="@drawable/click_selector_actionbar_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/left_drawer_itemh">
        <TextView
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="锁屏 +  图库"
            android:textColor="@color/bai"
            android:textSize="15sp"
            android:drawablePadding="9dp"
            android:layout_marginLeft="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_drawer_addlock_setting"
        android:background="@drawable/click_selector_actionbar_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/left_drawer_itemh">
        <TextView
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="锁屏 +  系统设置"
            android:textColor="@color/bai"
            android:textSize="15sp"
            android:drawablePadding="9dp"
            android:layout_marginLeft="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_drawer_addlock_qa"
        android:background="@drawable/click_selector_actionbar_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/left_drawer_itemh">
        <TextView
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="锁屏 +  常见问题"
            android:textColor="@color/bai"
            android:textSize="15sp"
            android:drawablePadding="9dp"
            android:layout_marginLeft="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="20dp"
            android:background="@color/bai_20"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </RelativeLayout>


    <!--<RelativeLayout-->
        <!--android:id="@+id/rl_drawer_divider2"-->
        <!--android:background="@color/main_bg_color"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="18dp">-->
    <!--</RelativeLayout>-->

    <RelativeLayout
        android:id="@+id/rl_drawer_clearcache"
        android:background="@drawable/click_selector_actionbar_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/left_drawer_itemh">
        <TextView
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="清理缓存"
            android:textColor="@color/bai"
            android:textSize="15sp"
            android:drawablePadding="9dp"
            android:layout_marginLeft="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_drawer_checkupdata"
        android:background="@drawable/click_selector_actionbar_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/left_drawer_itemh">
        <TextView
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="检查更新"
            android:textColor="@color/bai"
            android:textSize="15sp"
            android:drawablePadding="9dp"
            android:layout_marginLeft="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_drawer_about"
        android:background="@drawable/click_selector_actionbar_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/left_drawer_itemh">
        <TextView
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="关于"
            android:textColor="@color/bai"
            android:textSize="15sp"
            android:drawablePadding="9dp"
            android:layout_marginLeft="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View
        android:id="@+id/left_drawer_bottomview"
        android:background="@color/actionbar_bg_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
