<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <ImageButton
        android:clickable="true"
        android:id="@+id/iv_top_bar_left"
        android:layout_width="48dp"
        android:paddingLeft="5dp"
        android:layout_height="match_parent"
        android:background="@color/touming"
        android:scaleType="center"
        android:src="@drawable/ic_navi"/>

    <TextView
        android:id="@+id/tv_top_bar_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textSize="14sp"
        android:gravity="center"
        android:text="编辑"
        android:paddingLeft="15dp"
        android:textColor="@color/click_selector_textcolor_bai"
        android:paddingRight="20dp"/>

    <RelativeLayout
        android:id="@+id/rl_top_bar_title_wrapper"
        android:layout_toRightOf="@id/iv_top_bar_left"
        android:layout_marginRight="48dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_top_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="锁屏图库"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="16sp"/>
    </RelativeLayout>


    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc"/>
</RelativeLayout>
